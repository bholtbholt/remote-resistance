{
  "name": "remote-resistance",
  "version": "1.0.0",
  "description": "Play Resistance with your friends anywhere â€“ a real-time remote version of the game.",
  "scripts": {
    "build": "npm run clean && parcel build ./client/index.html",
    "clean": "rm -rf dist && rm -rf .cache",
    "lint": "svelte-check",
    "setup": "cp .env.sample .env && npm install",
    "start": "ts-node ./server/index.ts & parcel ./client/index.html",
    "prestart": "rm -rf dist",
    "test": "jest --watch"
  },
  "author": "bholtbholt",
  "license": "UNLICENSED",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "esModuleInterop": true
        }
      }
    },
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "test-helper.ts"
    ],
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "svelte",
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@testing-library/svelte": "^3.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.2",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "@types/uuid": "^8.3.0",
    "jest": "^26.4.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-svelte": "^4.0.6",
    "postcss-modules": "^3.2.2",
    "postcss-nested": "^4.2.3",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.2.0",
    "svelte": "^3.24.1",
    "svelte-check": "^1.0.30",
    "svelte-jester": "^1.1.2",
    "svelte-preprocess": "^4.2.0",
    "tailwindcss": "^1.7.6",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
