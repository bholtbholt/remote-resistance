{
  "name": "remote-resistance",
  "version": "1.0.0",
  "description": "Play Resistance with your friends anywhere â€“ a real-time remote version of the game.",
  "scripts": {
    "build": "npm run clean && vite build",
    "clean": "rm -rf dist && rm -rf .cache",
    "dev": "vite",
    "lint": "svelte-check",
    "prestart": "rm -rf dist",
    "setup": "cp .env.sample .env && npm install",
    "server": "ts-node ./server/index.ts",
    "start": "ts-node ./server/index.ts & vite build --watch --mode development",
    "test": "jest --watch"
  },
  "author": "bholtbholt",
  "license": "UNLICENSED",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "esModuleInterop": true
        }
      }
    },
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "test-helper.ts",
      "history-states.ts"
    ],
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "svelte",
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "socket.io": "^4.3.1",
    "socket.io-client": "^4.3.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.26",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/uuid": "^8.3.1",
    "autoprefixer": "^10.3.7",
    "jest": "^27.0.6",
    "postcss": "^8.3.11",
    "postcss-modules": "^4.2.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "*",
    "prettier-plugin-svelte": "*",
    "svelte": "3.x",
    "svelte-check": "^2.2.7",
    "svelte-jester": "2.x",
    "svelte-preprocess": "4.x",
    "tailwindcss": "^3.0.0-alpha.1",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.3.1",
    "typescript": "^4.4.4",
    "vite": "^2.6.3"
  }
}
