{
  "name": "remote-resistance",
  "version": "1.0.0",
  "description": "Play Resistance with your friends anywhere â€“ a real-time remote version of the game.",
  "scripts": {
    "build": "npm run clean && parcel build ./client/index.html",
    "clean": "rm -rf dist && rm -rf .cache",
    "lint": "svelte-check",
    "setup": "cp .env.sample .env && npm install",
    "start": "ts-node ./server/index.ts & parcel ./client/index.html",
    "prestart": "rm -rf dist",
    "test": "jest --watch"
  },
  "author": "bholtbholt",
  "license": "UNLICENSED",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "esModuleInterop": true
        }
      }
    },
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "test-helper.ts",
      "history-states.ts"
    ],
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "svelte",
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "socket.io": "4.x",
    "socket.io-client": "4.x",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.10.3",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^3.0.0",
    "@types/uuid": "^8.3.1",
    "jest": "^27.0.6",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-svelte": "^4.x",
    "postcss-modules": "^4.2.2",
    "postcss-nested": "^4.2.3",
    "prettier": "*",
    "prettier-plugin-svelte": "*",
    "svelte": "3.x",
    "svelte-check": "2.x",
    "svelte-jester": "2.x",
    "svelte-preprocess": "4.x",
    "tailwindcss": "^1.8.10",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
